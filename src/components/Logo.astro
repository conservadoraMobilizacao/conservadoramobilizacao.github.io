---
interface Props{
  companyName:string;
}
const {companyName} = Astro.props;

const logoURL  = "logo.jpg"

---
<div class="logo flex items-center" >
    <figure>
      <img src=`/images/${logoURL}` alt={companyName}/>
    </figure>
    <span>
      {companyName}
    </span>
</div>

<style>
  .logo{
    max-width:186px;
    position: Absolute;
  }
  .logo figure{
    height: 79px;
    width: 186px;
  }
  .logo figure img{
    height: auto;
    width: auto;
    border-radius:50%;
  }
  .logo span{
    padding: 5px;
    height: 55px;
    margin-left: 5px;
    border-left: 1px solid #FFF;
  }

</style>