<div class="grid grid-cols-1 md:grid-cols-3">
{
    offers.map((offer)=>(
        <ImageCard imageURL={offer.imageURL} title={offer.offerTitle} text={offer.offerText} callToAction={offer.callToAction} />
    ))
}

</div>
</section>